{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "lib": ["es5", "es6", "dom", "dom.iterable"]
    }
}

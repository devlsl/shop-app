{
    "name": "shop",
    "private": true,
    "scripts": {
        "build:shared": "cd packages/shared && npm run build",
        "building:server": "cd apps/server && npm run build:w",
        "start:server": "cd apps/server && npm run dev",
        "building:static": "cd apps/static && npm run build:w",
        "start:static": "cd apps/static && npm run dev",
        "start:client": "cd apps/client && npm run dev",
        "format": "prettier --write ."
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "devDependencies": {
        "prettier": "^3.3.3"
    }
}
